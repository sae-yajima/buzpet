<main class="main">
<%= form_with(url: search_pets_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "Search...", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
 <div class="inner">
   <% if user_signed_in? %>
   <div class="greeting">
    <%# Welcom to BuzPet %>
   </div>
    <% else %>
    <% end %> 
    <div class="card__wrapper">
    <%= render partial: 'pet', collection: @pets  %>
    </div> 
   </div>
   
 </div>
</main>